<div class="px-8 mt-4">
      <div class="flex items-center space-x-4 overflow-x-auto scrollbar-hide">
        <% @projects.each do |project| %>
          <button class="project-item flex-shrink-0 group relative focus:outline-none transition-all duration-300"
                  data-action="click->projects-dashboard#selectProject"
                  data-project-title="<%= project[:title] %>"
                  data-project-subtitle="<%= project[:subtitle] %>"
                  data-project-bg="<%= project[:background_path] %>"
                  data-thumb-path="<%= project[:thumb_path] %>">
            <div class="w-32 h-32 rounded-2xl overflow-hidden transition-all duration-300 shadow-2xl relative">
              <img src="<%= project[:thumb_path] %>" alt="<%= project[:title] %>" class="w-full h-full object-cover transition-all duration-300">
              <!-- Selection indicator overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-blue-500/20 to-transparent opacity-0 transition-opacity duration-300"></div>
              <!-- Selection ring -->
              <div class="absolute inset-0 rounded-2xl border-2 border-transparent transition-all duration-300"></div>
            </div>
          </button>
        <% end %>
      </div>

      <div class="mt-6 transition-all duration-500 ease-in-out" data-projects-dashboard-target="titleDisplay">
        <h3 class="text-white text-2xl font-light tracking-wide opacity-70"><%= @projects.first[:title] %></h3>
      </div>
    </div>
